command = zsh
click-repeat-interval = 500
window-decoration = auto
mouse-scroll-multiplier = 6

#custom-shader = ./gears-and-belts.glsl
#custom-shader-animation = true

background-image = "{{ .chezmoi.homeDir }}/.local/share/wallpapers/terminal_background.jpg"
background-image-opacity = 0.05
background-image-fit = cover

font-family = {{ .monospace_font }}

theme = Nocturnal Winter
cursor-style = bar
window-height = 34
window-width = 135
shell-integration-features = sudo
working-directory = home

keybind = ctrl+v=paste_from_clipboard

keybind = ctrl+1=goto_tab:1
keybind = ctrl+2=goto_tab:2
keybind = ctrl+3=goto_tab:3
keybind = ctrl+4=goto_tab:4
keybind = ctrl+5=goto_tab:5
keybind = ctrl+6=goto_tab:6
keybind = ctrl+7=goto_tab:7
keybind = ctrl+8=goto_tab:8
keybind = ctrl+9=goto_tab:9
