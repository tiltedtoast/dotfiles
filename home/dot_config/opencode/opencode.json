{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "*": "ask",
        "edit": "allow",
        "read": {
            "*": "allow",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.env.example": "allow"
        },
        "todowrite": "allow",
        "glob": "allow",
        "grep": "allow",
        "todoread": "allow",
        "lsp": "allow",
        "task": "allow",
        "bash": {
            "find *": "allow",
            "ls *": "allow",
            "sort *": "allow",
            "wc *": "allow",
            "git *": "allow",
            "git commit *": "deny",
            "git push *": "deny",
            "mkdir *": "allow",
            "rm *": "deny",
            "head *": "allow"
        }
    }
}
